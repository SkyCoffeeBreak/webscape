      const websocket = window.getWebSocket();
      if (websocket && websocket.readyState === WebSocket.OPEN) {
        console.log('üì§ Sending bank move to server');
        websocket.send(JSON.stringify({
          type: 'bank-sync',
          bankData: playerBank
        }));
      }
    }
  }
}

